# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Cognito Configuration (REQUIRED)
# Get this from your AWS Cognito User Pool
COGNITO_USER_POOL_ID=your_user_pool_id_here

# DynamoDB Table Names (Optional - will be set automatically by Serverless Framework)
# These are just examples - actual names will include stage suffix
CHALLENGES_TABLE=frc-challenge-api-challenges-dev
USER_PROGRESS_TABLE=frc-challenge-api-user-progress-dev
CHALLENGE_SESSIONS_TABLE=frc-challenge-api-challenge-sessions-dev

# Deployment Stage
STAGE=dev

# Node Environment
NODE_ENV=development
