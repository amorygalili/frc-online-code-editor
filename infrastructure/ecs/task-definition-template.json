{
  "family": "frc-challenge-runtime",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "{{CPU}}",
  "memory": "{{MEMORY}}",
  "ephemeralStorage": {
    "sizeInGiB": 50
  },
  "executionRoleArn": "arn:aws:iam::{{AWS_ACCOUNT_ID}}:role/{{EXECUTION_ROLE_NAME}}",
  "taskRoleArn": "arn:aws:iam::{{AWS_ACCOUNT_ID}}:role/{{TASK_ROLE_NAME}}",
  "containerDefinitions": [
    {
      "name": "wpilib-editor",
      "image": "{{ECR_REPOSITORY_URI}}:{{IMAGE_TAG}}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 30003,
          "protocol": "tcp",
          "name": "editor-api"
        },
        {
          "containerPort": 30004,
          "protocol": "tcp",
          "name": "nt4-proxy"
        },
        {
          "containerPort": 30005,
          "protocol": "tcp",
          "name": "halsim-proxy"
        },
        {
          "containerPort": 30006,
          "protocol": "tcp",
          "name": "language-server"
        }
      ],
      "environment": [
        {
          "name": "CHALLENGE_ID",
          "value": "{{CHALLENGE_ID}}"
        },
        {
          "name": "USER_ID",
          "value": "{{USER_ID}}"
        },
        {
          "name": "SESSION_ID",
          "value": "{{SESSION_ID}}"
        },
        {
          "name": "JAVA_OPTS",
          "value": "-Xmx{{JAVA_HEAP_SIZE}}m"
        },
        {
          "name": "DISPLAY",
          "value": ":1"
        },
        {
          "name": "DONT_PROMPT_WSL_INSTALL",
          "value": "1"
        },
        {
          "name": "NODE_ENV",
          "value": "{{NODE_ENV}}"
        },
        {
          "name": "AWS_REGION",
          "value": "{{AWS_REGION}}"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:{{AWS_REGION}}:{{AWS_ACCOUNT_ID}}:secret:{{DATABASE_SECRET_NAME}}"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "workspace",
          "containerPath": "/home/frcuser/workspace",
          "readOnly": false
        },
        {
          "sourceVolume": "tmp",
          "containerPath": "/tmp",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/frc-challenge-runtime",
          "awslogs-region": "{{AWS_REGION}}",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:30003/health || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "stopTimeout": 30,
      "startTimeout": 120,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      }
    }
  ],
  "volumes": [
    {
      "name": "workspace",
      "efsVolumeConfiguration": {
        "fileSystemId": "{{EFS_FILE_SYSTEM_ID}}",
        "rootDirectory": "/challenges/{{USER_ID}}/{{CHALLENGE_ID}}",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "{{EFS_ACCESS_POINT_ID}}",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "tmp",
      "efsVolumeConfiguration": {
        "fileSystemId": "{{EFS_FILE_SYSTEM_ID}}",
        "rootDirectory": "/tmp/{{SESSION_ID}}",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "{{EFS_ACCESS_POINT_ID}}",
          "iam": "ENABLED"
        }
      }
    }
  ],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Environment",
      "value": "{{ENVIRONMENT}}"
    },
    {
      "key": "Project",
      "value": "frc-challenge-site"
    },
    {
      "key": "Component",
      "value": "challenge-runtime"
    },
    {
      "key": "UserId",
      "value": "{{USER_ID}}"
    },
    {
      "key": "ChallengeId",
      "value": "{{CHALLENGE_ID}}"
    },
    {
      "key": "SessionId",
      "value": "{{SESSION_ID}}"
    }
  ]
}
